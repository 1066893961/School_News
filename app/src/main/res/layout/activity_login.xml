<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="76dp"
            android:text="登录"
            android:textColor="@color/color_0076ff"
            android:textSize="36sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_64"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_64"
            android:layout_marginRight="@dimen/dp_30"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/account_tv"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="账号"
                android:textColor="#ff030303"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/input_phone_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_toRightOf="@+id/account_tv"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入手机号码"
                android:maxLength="11"
                android:maxLines="1"
                android:textColor="@color/color_030303"
                android:textColorHint="@color/color_cfd1d6"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/clear_iv"
                android:layout_width="@dimen/dp_30"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_10"
                android:scaleType="centerInside"
                android:src="@mipmap/icon_clear" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:background="#E3E5EA" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_64"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/vertify_tv"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="密码"
                android:textColor="#ff030303"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/vertify_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_toRightOf="@+id/vertify_tv"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入密码"
                android:inputType="numberPassword"
                android:maxLength="6"
                android:maxLines="1"
                android:textColor="@color/color_030303"
                android:textColorHint="@color/color_cfd1d6"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:background="#E3E5EA" />

        <LinearLayout
            android:id="@+id/regist_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_64"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="用户名"
                    android:textColor="#ff030303"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/user_name_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_toRightOf="@+id/vertify_tv"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入用户名"
                    android:textColor="@color/color_030303"
                    android:textColorHint="@color/color_cfd1d6"
                    android:textSize="16sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:background="#E3E5EA" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_64"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="支付密码"
                    android:textColor="#ff030303"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/study_no_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_toRightOf="@+id/vertify_tv"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入支付密码"
                    android:inputType="numberPassword"
                    android:maxEms="6"
                    android:maxLength="6"
                    android:textColor="@color/color_030303"
                    android:textColorHint="@color/color_cfd1d6"
                    android:textSize="16sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:background="#E3E5EA"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_64"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="班级名称"
                    android:textColor="#ff030303"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/class_name_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_toRightOf="@+id/vertify_tv"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入班级名称"
                    android:textColor="@color/color_030303"
                    android:textColorHint="@color/color_cfd1d6"
                    android:textSize="16sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:background="#E3E5EA" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/login_tv"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginTop="65dp"
                android:layout_weight="1"
                android:background="@drawable/login_btn_click_bg"
                android:gravity="center"
                android:text="登 录"
                android:textColor="#ffffffff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/regist_tv"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginTop="65dp"
                android:layout_marginRight="@dimen/dp_40"
                android:layout_weight="1"
                android:background="@drawable/login_btn_click_bg"
                android:gravity="center"
                android:text="注册"
                android:textColor="#ffffffff"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>