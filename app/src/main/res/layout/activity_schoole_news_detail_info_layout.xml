<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/ns"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="52dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <VideoView
                android:id="@+id/video_view"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="220dp"/>

            <ImageView
                android:id="@+id/top_iv"
                android:layout_width="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_school" />


            <TextView
                android:id="@+id/content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:lineSpacingExtra="2dp"
                android:lineSpacingMultiplier="1.5"
                android:padding="@dimen/dp_12"
                android:text="    我们的生活是在不断的相遇和思念中，但是总有一些等待不能太久，因为没有意识到已经在我的心底凋谢了。寂寞太久了，是不习惯爱和被爱的。下面带来2020夫妻平淡而幸福的句子 夫妻异地生活感悟句子！ 2020夫妻平淡而幸福的句子 夫妻异地生活感悟句子1-10 1、什么是爱？这其实很简单。凡是提高、充实、丰富我们生活的东西就是爱。通向一切高度和深度的东西就是爱。 2、两只手紧紧地握在一起，一颗心紧紧地贴在一起。因为两个人已经他们爱的很深，已经成为了一个整体。 3、我最幸福的时刻但是总有一些等待不能太久但是总有一些等待不能太久但是总有一些等待不能太久但是总有一些等待不能太久但是总有一些等待不能太久但是总有一些等待不能太久但是总有一些等待不能太久但是总有一些等待不能太久但是总有一些等待不能太久"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_18" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:background="@color/app_activity_bg"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_16"
                android:text="评论列表"
                android:textColor="@color/color_333333"
                android:textSize="16sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/pinglun_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_alignParentBottom="true"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/shoucang_ll"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_44"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/shoucang_img"
                android:layout_width="22dp"
                android:layout_height="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_5"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_shoucang_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="收藏"
                android:textColor="@color/color_999999"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/comment_ll"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_comment_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="评论"
                android:textColor="@color/color_999999"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_ll"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_share_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="分享"
                android:textColor="@color/color_999999"
                android:textSize="10sp" />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>